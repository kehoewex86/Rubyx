@model Rubyx.ViewModels.WasteTypeFormViewModel
@{
    ViewBag.Title = "WasteTypeForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Waste Type</h2>

@using (Html.BeginForm("Save", "WasteTypes"))
{
    @Html.ValidationSummary(true, "Please fix the below errors")

    <div class="form-group">
        @Html.LabelFor(w => w.WasteType.Name)
        @Html.TextBoxFor(w => w.WasteType.Name, new { @class = "form-control"})
        

    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.WasteType.EwcCodeId)
        @Html.DropDownListFor(e => e.WasteType.EwcCodeId, new SelectList(Model.EwcCode, "Id", "ewcCode"), "Select EWC Code", new { @class = "form-control"})

    </div>

    @Html.HiddenFor(w => w.WasteType.Id)
    

    <button type="submit" class="btn btn-primary">Save</button>

    @Html.AntiForgeryToken();
    //back button that returns you to the index page
    @Html.ActionLink("Back", "Index","WasteTypes", null, new { @class = "btn btn-primary"})
    
}

