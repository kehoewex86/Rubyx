<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Merseyside &amp; Halton contract</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        footer{
            position:relative;
            color:snow;
            background-color:#e95420;
            min-height:80px;
            overflow:hidden;
            padding-right:-50px;
            padding-left:-50px;
            margin-right:-50px;
            margin-left:-50px;
            overflow:hidden;
        }

        body{
            margin:0;
            padding-left:50px;
            padding-right:50px;
            overflow-x:hidden;
        }
    </style>

    <link rel="icon" type="image/x-icon" href="@Url.Content("~/Content/Images/veolialogo.png")" />
</head>
<body>
    @Html.Partial("_NavBar")
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer class="navbar-static-bottom">
            <p>&copy; @DateTime.Now.Year - Veolia</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
